{
  "name": "@shermant/logger",
  "type": "module",
  "version": "1.2.4",
  "description": "",
  "author": "ShermanT",
  "license": "ISC",
  "exports": {
    ".": {
      "browser": "./.output/dist/index.browser.js",
      "node": "./.output/dist/index.js",
      "default": "./.output/dist/index.js"
    }
  },
  "main": ".output/dist/index.js",
  "browser": ".output/dist/index.browser.js",
  "types": ".output/dist/index.d.ts",
  "files": [
    ".output/dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run ./src/index.ts",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch=true",
    "clean:dist": "rimraf -rf ./.output/dist",
    "build": "bun run test && bun run clean:dist && bun run build:node && bun run build:browser && tsc",
    "build:node": "bun build ./src/index.ts --minify --outdir ./.output/dist --target node --external chalk --external ora",
    "build:browser": "bun build ./src/index.ts --minify --outfile ./.output/dist/index.browser.js --target browser --external chalk --external ora --define process.env.NODE_ENV='\"browser\"'",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint": "eslint . --fix --ignore-pattern 'docs/**'"
  },
  "optionalDependencies": {
    "chalk": "^5.3.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.20.0",
    "@types/bun": "^1.1.4",
    "@types/node": "^20.14.2",
    "eslint": "^9.4.0",
    "eslint-plugin-format": "^0.1.1",
    "jsdom": "^24.1.0",
    "rimraf": "^5.0.7",
    "turndown": "^7.2.0",
    "vitepress": "^1.2.3",
    "vitest": "^1.6.0"
  }
}
